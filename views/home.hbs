<div class="row">
    <div class="col-6"><h1>Movie</h1></div>
    <div class="col-6 d-flex justify-content-end">
        <a href="/addmovie" type="button" class="btn btn-primary align-self-center">+ add movie</a>
    </div>
</div>

{{#if alert}}
<div class="alert alert-success alert-dismissible fade show" role="alert">
  {{alert}}
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}

<table class="table table-bordered">
    <thead class="thread-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Category</th>
            <th scope="col">Date</th>
            <th scope="col">Rate</th>
            <th scope="col" class="text-end">Action</th>
        </tr>
    </thead>
    <tbody>

        {{#each rows}}
        <tr>
            <th scope="row">{{this.id}}</th>
            <td>{{this.name}}</td>
            <td>{{this.category}}</td>
            <td>{{this.date}}</td>
            <td>{{this.rate}}</td>
            <td class="text-end"> 
                <a herf="#" type="button" class="btn btn-light btn-small"><i class="bi bi-eye"></i> View</a>
                <a herf="#" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i> Edit</a>
                <a herf="#" type="button" class="btn btn-light btn-small"><i class="bi bi-trash3-fill"></i> Delete</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>